<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/igstories" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/uphsmalllogo" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="uphmedan" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="310dp"
            android:src="@drawable/uphpostfeed" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="uphmedan Program Studi Sistem Informasi UPH Medan mengadakan IT Meet Up yang telah diselenggarakan pada 25 Februari 2023 pukul 15:00 WIB. Kegiatan hari ini dihadiri oleh mahasiswa, dosen, dan praktisi IT. Adapun kegiatan ini bertujuan untuk menghasilkan forum dan kolaborasi antara praktisi dan akademis. Acara ini juga didukung oleh AWS dan K3Mart." />
    </LinearLayout>
</FrameLayout>